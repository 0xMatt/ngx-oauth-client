{
  "compileOnSave": false,
  "compilerOptions": {
    "mapRoot": "./",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "isolatedModules": false,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
